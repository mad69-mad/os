#include<stdio.h>
#include<string.h>
void main()
{
    int b[20],b1[20],n,blocks[20][20],sz[20];
    char F[20][20],S[20];
    printf("\n Enter no. of Files : ");
    scanf("%d",&n);
    for(int i=0;i<n;i++)
    {
        printf("\nEnter File %d name : ",i+1);
        scanf("%s",&F[i]);
        printf("\nEnter File%d size(in kb): ",i+1);
        scanf("%d",&sz[i]);
        printf("\nEnter blocksize of File%d(in bytes): ",i+1);
        scanf("%d",&b[i]);
    }
    for(int i=0;i<n;i++)
    {
        b1[i]=(sz[i]*1024)/b[i];
        printf("\n\nEnter blocks for file %d",i+1);
        for(int j=0;j<b1[i];j++)
        {
            printf("\nEnter the %d block : ",j+1);
            scanf("%d",&blocks[i][j]);
        }
    }
    printf("\n\nEnter the Filename : ");
    scanf("%s",S);
    for(int i=0;i<n;i++)
    {
        if(strcmp(S,F[i])==0)
        {
            printf("\nFname\tFsize\tBsize\tNblocks\tBlocks\n");
            printf("\n---------------------------------------------\n");
            printf("\n%s\t%d\t%d\t%d\t",F[i],sz[i],b[i],b1[i]);
            for(int j=0;j<b1[i];j++)
                printf("%d->",blocks[i][j]);
            printf("\n---------------------------------------------\n");
        }
    }
 }
